@model ProyectoASPNET.Models.basededatos.Producto
<h3>Edición de producto en la DDBB</h3>
<form method="post" asp-controller="Producto" asp-action="Editar">
    <table class="table">
        <tr>
            <td>ID:</td>
            <td><input type="text" asp-for="Id" /></td>
        </tr>
        <tr>
            <td>Nombre:</td>
            <td><input type="text" asp-for="Nombre" /></td>
        </tr>
        <tr>
            <td>Precio:</td>
            <td><input type="text" asp-for="Precio" /></td>
        </tr>
        <tr>
            <td>Cantidad:</td>
            <td><input type="text" asp-for="Cantidad" /></td>
        </tr>
        <tr>
            <td>Estado:</td>
            <td><input type="checkbox" asp-for="Estado" /></td>
        </tr>
        <tr>
            <td></td>
            <td><input type="submit" value="Editar en DDBB" /></td>
        </tr>
    </table>
</form>